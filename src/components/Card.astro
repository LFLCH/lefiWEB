---
import '../styles/card.scss';
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.slice(0,-1); //"lefiWEB";
---

<li class="link-card">
	<a href={baseUrl+href}>
		<h2>
			{title}
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
